<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#123123"
    tools:context="com.duanjobs.arrowtextview.MainActivity">
    <com.duanjobs.arrowtextview.widget.ArrowTextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:text="感谢天感谢地感谢命运让我们相遇自从有了你生命里都是奇蹟多少痛苦多少欢笑交织成一片灿烂的记忆"
        app:arrowCornerRadius="10dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="@color/dark_text_color"
        app:arrowBackgroundColor="@color/dark_background"
        android:padding="10dp"
        app:arrowHeight="5dp"
        app:arrowWidth="10dp"
        app:arrowDirection="bottom"
        />
    <com.duanjobs.arrowtextview.widget.ArrowTextView
        android:id="@+id/test1"
        android:layout_below="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="感谢天感谢地感谢命运让我们相遇自从有了你生命里都是奇蹟多少痛苦多少欢笑交织成一片灿烂的记忆"
        app:arrowCornerRadius="10dp"
        app:arrowBackgroundColor="@color/light_background"
        android:textColor="@color/light_text_color"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        app:arrowHeight="5dp"
        app:arrowWidth="10dp"
        app:relativePosition="50%"
        app:arrowDirection="left"
        />
    <com.duanjobs.arrowtextview.widget.ArrowTextViewRelative
        android:id="@+id/sss"
        android:layout_below="@+id/test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:arrowText="其实大家早已嫌大家却扮忙,恨有多一点碰撞"
        app:arrowCornerRadius="5dp"
        app:arrowTextSize="14sp"
        app:arrowDirection="bottom"
        app:relativePosition="80%"
        app:arrowTextColor="@color/light_text_color"
        app:arrowBackgroundColor="@color/light_background"/>
    <com.duanjobs.arrowtextview.widget.ArrowTextViewRelative
        android:id="@+id/sss0"
        android:layout_below="@+id/sss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:arrowText="仍然无聊事干不敢打搅对方"
        app:arrowCornerRadius="5dp"
        app:arrowTextSize="14sp"
        app:arrowDirection="left"
        app:relativePosition="50%"
        app:arrowTextColor="@color/light_text_color"
        app:arrowBackgroundColor="@color/light_background"/>
    <com.duanjobs.arrowtextview.widget.ArrowTextViewRelative
        android:id="@+id/sss1"
        android:layout_below="@+id/sss0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:arrowText="要是你愿意诚实讲一趟"
        app:arrowCornerRadius="5dp"
        app:arrowTextSize="14sp"
        app:arrowDirection="right"
        app:relativePosition="20%"
        app:arrowTextColor="@color/light_text_color"
        app:arrowBackgroundColor="@color/light_background"/>
    <com.duanjobs.arrowtextview.widget.ArrowTextViewRelative
        android:id="@+id/sss2"
        android:layout_below="@+id/sss1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:arrowText="彼此都起码觉得释放"
        app:arrowCornerRadius="5dp"
        app:arrowTextSize="14sp"
        app:arrowDirection="top"
        app:relativePosition="40%"
        app:arrowTextColor="@color/dark_text_color"
        app:arrowBackgroundColor="@color/dark_background"/>
</RelativeLayout>
